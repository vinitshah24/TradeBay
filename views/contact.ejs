<%- include("./partials/header.ejs") %>
    <main class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-xs-8 offset-xs-1 mb-4">
                <div class="container mb-5 mt-5">
                    <%- include("./partials/alert.ejs") %>
                    <div class="row shadow-sm p-3 mb-5 bg-white rounded">
                        <div class="col-md-6 px-0 wrap d-md-flex d-sm-none d-md-block d-none d-sm-block">
                            <img class="img-fluid img" src="/images/contact.jpg" alt="login">
                        </div>
                        <div class="col-md-6 p-5 p-md-4">
                            <h2 class="mb-3 form-pad">Contact Us</h2>
                            <form action="#">
                                <div class="form-group mb-2 form-pad">
                                    <label class="label mt-2" for="name">Name</label>
                                    <input type="text" id="name" class="form-control mt-2" required>
                                </div>
                                <div class="form-group mb-2 form-pad">
                                    <label class="label mt-2" for="email">Email</label>
                                    <input type="email" id="email" class="form-control mt-2" required>
                                </div>
                                <div class="mb-3 form-pad">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" name="message" rows="2"></textarea>
                                </div>
                                <div class="form-group mt-4 form-pad">
                                    <button type="submit" class="form-control btn btn-primary rounded">Submit</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include("./partials/footer.ejs") %>
