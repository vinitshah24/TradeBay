<%- include("../partials/header.ejs") %>
        <main class="container">
            <div class="row">
                <div class="col-md-10 offset-md-1 col-xs-8 offset-xs-1">
                    <div class="container mb-5 mt-5">
                        <%- include("../partials/alert.ejs") %>
                        <div class="row bg-white shadow-sm p-3 mb-5 bg-white rounded">
                            <div class="col-md-6 p-5 p-md-4">
                                <h2 class="mt-2 mb-3 form-pad">Sign Up</h2>
                                <form action="/users/signup" method="POST">
                                    <div class="row">
                                        <div class="col mb-2 form-pad">
                                            <label class="label mt-2" for="firstName">First Name</label>
                                            <input type="text" id="firstName" name="firstName" class="form-control mt-2" required>
                                        </div>
                                        <div class="col form-pad-2">
                                            <label class="label mt-2" for="lastName">Last Name</label>
                                            <input type="text" id="lastName" name="lastName" class="form-control mt-2" required>
                                        </div>
                                    </div>
                                    <div class="form-group mb-2 form-pad">
                                        <label class="label mt-2" for="email">Email</label>
                                        <input type="email" id="email" name="email" class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group mb-2 form-pad">
                                        <label class="label mt-2" for="password">Password</label>
                                        <input type="password" id="password" name="password" class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group mb-2 form-pad">
                                        <label class="label mt-2" for="password2">Confirm Password</label>
                                        <input type="password" id="password2" name="password2" class="form-control mt-2" required>
                                    </div>
                                    <div class="form-group mt-4 form-pad">
                                        <button type="submit" class="form-control btn btn-secondary rounded">Sign
                                            Up</button>
                                    </div>
                                </form>
                                <p class="text-center mt-4 mb-4">Already a member? <a class="text-decoration-none"
                                        href="/users/login">Sign In</a></p>
                            </div>
                            <div class="col-md-6 px-0 wrap d-md-flex d-sm-none d-md-block d-none d-sm-block">
                                <img class="img-fluid img p-2"
                                    src="/images/signup.jfif" alt="signup">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    <%- include("../partials/footer.ejs") %>