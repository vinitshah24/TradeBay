<%- include("../partials/header.ejs") %>
    <main class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-xs-8 offset-xs-1">
                <div class="container mb-5 mt-5">
                    <%- include("../partials/alert.ejs") %>
                        <div class="row shadow-sm p-3 mt-2 mb-5 bg-white rounded">
                            <div class="col-md-6 p-5 p-md-4">
                                <br>
                                <% if (user) { %>
                                    <h2 class="text-center mt-2 mb-5">Update Profile</h2>
                                    <form action="/users/update" method="POST">
                                        <div class="row">
                                            <div class="col mb-2 form-pad">
                                                <label class="label mt-2" for="firstName">First Name</label>
                                                <input type="text" id="firstName" name="firstName"
                                                    value="<%= user.firstName %>" class="form-control mt-2" required>
                                            </div>
                                            <div class="col form-pad-2">
                                                <label class="label mt-2" for="lastName">Last Name</label>
                                                <input type="text" id="lastName" name="lastName"
                                                    value="<%= user.lastName %>" class="form-control mt-2" required>
                                            </div>
                                        </div>
                                        <div class="form-group mb-2 form-pad">
                                            <label class="label mt-2" for="password1">Password</label>
                                            <input type="password" id="password1" name="password1"
                                                class="form-control mt-2" required>
                                        </div>
                                        <div class="form-group mb-2 form-pad">
                                            <label class="label mt-2" for="password2">Confirm Password</label>
                                            <input type="password" id="password2" name="password2"
                                                class="form-control mt-2" required>
                                        </div>
                                        <div class="form-group mt-4 form-pad">
                                            <button type="submit"
                                                class="form-control btn btn-secondary rounded">Update</button>
                                        </div>
                                    </form>
                                    <% } else {%>
                                        <h2>Login to view Profile!</h2>
                                        <% }%>
                            </div>
                            <div class="col-md-6 px-0 wrap d-md-flex d-sm-none d-md-block d-none d-sm-block">
                                <img class="img-fluid img p-2" src="/images/update.jpg" alt="signup">
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </main>
    <%- include("../partials/footer.ejs") %>