<%- include("../partials/header.ejs") %>
    <main class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1 col-xs-8 offset-xs-1">
                <div class="container mb-5 mt-5">
                    <%- include("../partials/alert.ejs") %>
                    <div class="row shadow-sm p-3 mt-2 mb-5 bg-white rounded">
                        <div class="col-md-6 px-0 wrap d-md-flex d-sm-none d-md-block d-none d-sm-block">
                            <img class="img-fluid img" src="/images/login.jpg" alt="login">
                        </div>
                        <div class="col-md-6 p-5 p-md-4">
                            <h2 class="mt-2 mb-3 form-pad">Sign In</h2>
                            <form action="/users/login" method="POST">
                                <div class="form-group mb-2 form-pad">
                                    <label class="label mt-2" for="email">Email</label>
                                    <input type="text" id="email" name="email" class="form-control mt-2" required>
                                </div>
                                <div class="form-group mb-2 form-pad">
                                    <label class="label mt-2" for="password">Password</label>
                                    <input type="password" id="password" name="password" class="form-control mt-2" required>
                                </div>
                                <div class="form-group mt-4 form-pad">
                                    <button type="submit" class="form-control btn btn-primary rounded">Sign
                                        In</button>
                                </div>
                            </form>
                            <p class="text-center mt-4 mb-4">Not a member? <a class="text-decoration-none"
                                    href="/users/signup">Sign Up</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <%- include("../partials/footer.ejs") %>